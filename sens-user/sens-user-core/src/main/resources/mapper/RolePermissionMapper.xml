<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liuyanzhao.sens.user.core.mapper.RolePermissionMapper">
    <resultMap id="BaseResultMap" type="com.liuyanzhao.sens.user.api.entity.RolePermission">
        <id column="id" property="id"/>
        <result column="role_id" property="roleId"/>
        <result column="permission_id" property="permissionId"/>
        <result column="del_flag" property="delFlag"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!--  del_flag 1已删除,0未删除  -->

    <sql id="tb">`t_role_permission`</sql>

    <sql id="all_columns">
        id, role_id, permission_id, del_flag, create_by, create_time, update_by, update_time
    </sql>

    <sql id="all_values">
        #{id}, #{roleId}, #{permissionId}, #{delFlag}, #{createBy}, #{createTime}, #{updateBy}, #{updateTime}
    </sql>

    <update id="deleteByRoleId">
        UPDATE <include refid="tb"/>
        SET del_flag = 1
        WHERE role_id = #{value}
    </update>

    <select id="findByPermissionId" resultMap="BaseResultMap">
        SELECT
            <include refid="all_columns"/>
        FROM
            <include refid="tb"/>
        WHERE permission_id = #{value} AND del_flag = 0
    </select>

    <select id="findByRoleId" resultMap="BaseResultMap">
        SELECT
        <include refid="all_columns"/>
        FROM
        <include refid="tb"/>
        WHERE role_id = #{value} AND del_flag = 0
    </select>

</mapper>